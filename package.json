{
  "name": "simple-template",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "vite",
    "dev:graceful": "node scripts/dev-server.js",
    "dev:clean": "npm run clean:cache && vite",
    "dev:clean-graceful": "npm run clean:cache && node scripts/dev-server.js",
    "build": "vite build",
    "build:clean": "npm run clean:cache && vite build",
    "preview": "vite preview --port 5173",
    "test": "vitest",
    "stop-server": "kill-port 5173",
    "stop-server-quiet": "kill-port 5173 || echo \"No server running\"",
    "clean:cache": "rimraf node_modules/.vite",
    "clean:cache-force": "npm run stop-server-quiet && rimraf node_modules/.vite",
    "clean:all": "rimraf node_modules/.vite && rimraf dist",
    "clean:full": "npm run stop-server-quiet && rimraf node_modules/.vite && rimraf dist && rimraf node_modules/.cache",
    "fresh-install": "rimraf node_modules && rimraf package-lock.json && npm install",
    "reset-dev": "npm run stop-server-quiet && timeout /t 2 /nobreak && rimraf node_modules/.vite && npm run dev",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "vite": "^5.1.2",
    "tailwindcss": "^3.4.4",
    "postcss": "^8.4.21",
    "autoprefixer": "^10.4.14",
    "vitest": "^1.1.4",
    "jsdom": "^22.1.0",
    "kill-port": "^2.0.1",
    "rimraf": "^5.0.5"
  }
}
